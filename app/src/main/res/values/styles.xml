<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base button style -->
    <style name="CalculatorButton" parent="Widget.Material3.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">24sp</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <!-- Number button style -->
    <style name="CalculatorNumberButton" parent="CalculatorButton">
        <item name="backgroundTint">@color/number_background</item>
    </style>

    <!-- Operator button style -->
    <style name="CalculatorOperatorButton" parent="CalculatorButton">
        <item name="backgroundTint">@color/operator_background</item>
    </style>

    <!-- Special button style (C, Â±, %) -->
    <style name="CalculatorSpecialButton" parent="CalculatorButton">
        <item name="backgroundTint">@color/special_background</item>
    </style>
</resources> 